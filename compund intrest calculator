#compound intrest calculater
principle=0
rate=0
time=0
while principle<=0:
  principle=float(input("enter the principle amount : "))
  if principle <=0:
    print("principle can't be less than eqal to zero")

while rate<=0:
  rate=float(input("enter the rate :" ))
  if rate <=0:
    print(" can't be less than eqal to zero")

while time<=0:
  time=float(input("enter the time :" ))
  if time <=0:
    print("can't be less than eqal to zero")

print(principle)
print(rate)
print(time)

total=principle *pow((1+rate/100),time)
print(f"balance after {time} years/s: $ {total}")
